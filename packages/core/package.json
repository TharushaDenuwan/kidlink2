{
  "name": "core",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "exports": {
    "./auth/config": {
      "import": "./src/auth/config.ts",
      "types": "./src/auth/config.ts"
    },
    "./auth/setup": {
      "import": "./src/auth/setup.ts",
      "types": "./src/auth/setup.ts"
    },
    "./database": {
      "import": "./src/database/index.ts",
      "types": "./src/database/index.ts"
    },
    "./database/schema": {
      "import": "./src/database/schema/index.ts",
      "types": "./src/database/schema/index.ts"
    },
    "./database/queries": {
      "import": "./src/database/queries/index.ts",
      "types": "./src/database/queries/index.ts"
    },
    "./rpc": {
      "import": "./src/rpc/index.ts",
      "types": "./src/rpc/index.ts"
    },
    "./env": {
      "import": "./src/env/index.ts",
      "types": "./src/env/index.ts"
    },
    "./zod": {
      "import": "./src/zod/index.ts",
      "types": "./src/zod/index.ts"
    }
  },
  "scripts": {
    "build": "bun run build.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:migrate": "bun src/database/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "auth:generate": "bunx @better-auth/cli@latest generate --config ./src/auth/config.ts --output ./src/database/schema/auth.schema.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "api": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "catalog:",
    "drizzle-orm": "^0.45.0",
    "hono": "catalog:",
    "ws": "^8.18.3",
    "zod": "^4.1.13"
  }
}
