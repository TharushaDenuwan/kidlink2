{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",

    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/*"]
    }
  }
}
